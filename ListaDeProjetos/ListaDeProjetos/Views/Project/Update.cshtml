@model ListaDeProjetos.Models.Project.UpdateViewModel
@{
    var userOptions = (SelectList)ViewBag.UsersList;
}

<div class="container">
    <h2 class="text-primary">Atualizar Projeto:</h2>
    <hr class="col-6" />
    <form method="post" asp-controller="Project" asp-action="Update">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3 col-6">
            <label asp-for="Title" class="form-label">Título do Projeto</label>
            <input asp-for="Title" class="form-control" placeholder="Título do Projeto">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 col-6">
            <label asp-for="Description" class="form-label">Descrição do Projeto</label>
            <textarea asp-for="Description" class="form-control" placeholder="Descreva o Projeto" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-3">
            <select asp-for="Status" class="form-select">
                <option selected disabled>Selecione o Status</option>
                <option asp-for="Status" value="Iniciar">Iniciar</option>
                <option asp-for="Status" value="Em andamento">Em andamento</option>
                <option asp-for="Status" value="Parado">Parado</option>
                <option asp-for="Status" value="Finalizado">Finalizado</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col-3 mt-3">
            <input asp-for="CreatedDate" type="date" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>

        <div class="col-3 mt-3">
            <input asp-for="FinishDate" type="date" />
            <span asp-validation-for="FinishDate" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="Users" class="form-label">Selecione o Usuário</label>
            <select asp-for="Users" class="form-select" asp-items="userOptions">
                <option value="" selected disabled>Selecione o Usuário</option>
                @* @foreach (var userOption in userOptions) 'asp-items' substitui a logica do foreach
                {
                    <option  value="@userOption.Value">@userOption.Text</option>
                } *@
            </select>
            <span asp-validation-for="Users" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Project" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </form>
</div>
