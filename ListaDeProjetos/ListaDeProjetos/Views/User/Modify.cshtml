@model ListaDeProjetos.DBModels.User

<div class="container">
    <h1>Editar Usuário</h1>
    <form method="post" asp-controller="User" asp-action="Modify">

        <input type="hidden" asp-for="Id"/>

        <div class="form-floating mb-3 col-6">
            <input asp-for="Name" class="form-control" placeholder="Nome do Usuário">
            <label asp-for="Name">Nome do Usuário</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-check form-switch">
            <input asp-for="IsAdmin" class="form-check-input" type="checkbox" role="switch">
            <label class="form-check-label" asp-for="IsAdmin">Administrador</label>
        </div>
        <div class="d-flex mt-3">
            <a class="btn btn-danger me-3" asp-controller="User" asp-action="Index">Voltar</a>
            <button class="btn btn-success">Salvar</button>
        </div>
    </form>

</div>